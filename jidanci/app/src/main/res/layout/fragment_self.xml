<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="修改用户名"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/icon_my_self"
            android:id="@+id/self_tv_resetname"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="背诵单词库"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/icon_my_self"
            android:id="@+id/self_tv_words"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="复习单词库"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/icon_my_self"
            android:id="@+id/self_tv_reviewwords"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="单词库"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/icon_my_self"
            android:id="@+id/self_tv_allwords"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Difficult单词库"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/icon_my_self"
            android:id="@+id/self_tv_difficultwords"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="软件说明"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/icon_my_self"
            android:id="@+id/self_tv_explain"
            />
        <TextView
            android:paddingTop="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="   版本       v 究极魔改之再改剁手之剁就剁吧版"
            android:textSize="20sp"
            android:background="@drawable/icon_my_self"
            android:id="@+id/self_tv_version"
            />
    </LinearLayout>
</ScrollView>